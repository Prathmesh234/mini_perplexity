# Azure resource configuration for service components

# Connection string with access to the Service Bus namespace used by
# both the indexer and embedding services.
SERVICE_BUS_CONN_STR="Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_KEY"

# Optional override for the ingestion topic name read by the embedding service.
TOPIC_NAME_INGESTION="ingestion"

# Connection string used by the indexer to publish document chunks.
AZURE_SERVICE_BUS_CONNECTION_STRING="Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_KEY"

# Azure Storage account connection string for fetching source data inside the indexer.
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=yourstorage;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net"
